.main-menu
	&__items
		display flex
	&__link
		display block
		padding 1em 1.25em
		font-family $font-family--headings
		font-size 1.8rem
		text-transform uppercase
		color $grey
		&:active,
		&:visited
			color $grey
		&:hover
			color $blue
		.icon
			position absolute
			top 50%
			right 0
			transform translateY(-50%)

.sub-menu
	display none
	padding-left 1.5em
	&.toggled-on
		display block
	.main-menu__link
		width 16em


@media ({$mobile-widths-only})
	.main-menu
		&__top-inner
			display flex
			padding-top 10px
			container()
		&__items
			display none
			container()
		&__items--open
			display block
		&__link
			.icon
				display none

		.dropdown-toggle
			position absolute
			top 0
			right 0
			padding 0.5em
			transform translateY(50%)
			&.toggled-on
				.icon
					transform rotate(180deg)

	.menu-item-has-children
		position relative


@media ({$tablet-widths})
	.main-menu
		&__item
			position relative
			&:hover > .sub-menu
				display block
	.sub-menu
		position absolute
		.icon
			transform translateY(-50%) rotate(-90deg)
		.sub-menu
			top 0
			left 100%

	.dropdown-toggle
		display none



